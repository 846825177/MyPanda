<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:id="@+id/iv_watch_img"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_watch_title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_watch_img"
        android:layout_toEndOf="@+id/iv_watch_img"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_watch_cont"
        android:layout_alignBottom="@+id/iv_watch_img"
        android:layout_toRightOf="@+id/iv_watch_img"
        android:layout_toEndOf="@+id/iv_watch_img" />
    <ImageView
        android:src="@mipmap/default_time_view"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/tv_watch_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tv_watch_cont" />

    <ImageView
        android:id="@+id/play_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/play"
        android:layout_alignBottom="@+id/iv_watch_img"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_watch_img"
        android:layout_marginLeft="5dp"
        android:textColor="#fff"
        android:textSize="13sp"
        android:layout_toRightOf="@+id/play_img"
        android:layout_toEndOf="@+id/play_img"
        android:id="@+id/play_time_on" />
</RelativeLayout>