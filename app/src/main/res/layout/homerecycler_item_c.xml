<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <TextView
        android:textColor="#0af"
        android:padding="10dp"
        android:id="@+id/c_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:background="#666"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/c_image_left"
            android:layout_width="150dp"
            android:layout_height="150dp" />
        <LinearLayout
            android:layout_toRightOf="@id/c_image_left"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="75dp">
                <TextView
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/item_c"
                    android:textColor="#f0b"
                    android:id="@+id/c_brief_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/c_title_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="75dp">
                <TextView
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/item_c"
                    android:textColor="#f0b"
                    android:id="@+id/c_brief_btm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/c_title_btm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <ListView
        android:descendantFocusability="beforeDescendants"
        android:id="@+id/c_ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>