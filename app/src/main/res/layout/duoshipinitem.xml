<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="180px" >

        <ImageView
            android:id="@+id/it_duo_iamge"
            android:layout_width="340px"
            android:layout_height="180px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
        />

        <RelativeLayout
            android:layout_width="170px"
            android:layout_height="62px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/default_time_view"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/ivHomeHLSmImg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15px"
                android:src="@drawable/lpanda_live_layer" />

            <TextView
                android:id="@+id/tvHomeVlPlayTime2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ivHomeHLSmImg2"
                android:text="Live"
                android:textColor="#fff"
                android:textSize="36px" />
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:text="asd"
        android:layout_width="wrap_content"
        android:id="@+id/it_duo_text"
        android:layout_height="wrap_content" />



</LinearLayout>